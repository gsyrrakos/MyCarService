<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/start_screen6"
    >



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_screen6">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:padding="8dp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.981">

        <TextView
            android:id="@+id/text_slideshow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"




            android:maxLines="1"
            android:text="Milauge"
            />
        <TextView
            android:id="@+id/text_slideshow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/rectangle_26"
            android:layout_below="@id/text_slideshow"
            android:gravity="center"


            android:maxLines="1"
            />
        <TextView
            android:id="@+id/text_descriptionlabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_slideshow1"
            android:gravity="center"




            android:maxLines="1"
            android:text="Service Shop" />

        <TextView
            android:id="@+id/text_description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_descriptionlabel"

            android:background="@drawable/rectangle_26"
            android:gravity="center"


            android:maxLines="1"
             />


        <TextView
            android:id="@+id/text_DateLabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_description"

            android:gravity="center"


            android:maxLines="1"
            android:text="Date" />

        <TextView
            android:id="@+id/text_Date"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_DateLabel"

            android:background="@drawable/rectangle_26"
            android:gravity="center"

            android:maxLines="1"
            />

        <TextView
            android:id="@+id/text_Descriptionlabel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_Date"

            android:gravity="center"


            android:maxLines="1"
            android:text="Description" />

        <TextView
            android:id="@+id/text_Description"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_Descriptionlabel"
            android:gravity="center"
            android:background="@drawable/rectangle_25"


            android:maxLines="1"
           />


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
